{
  "$id": "http://example.com/learningEngagement_learningExperience.json",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "_id",
    "_bssVer",
    "_ver",
    "_created",
    "_lastModified",
    "_docType",
    "_assetType",
    "assetClass",
    "learningModel",
    "resources",
    "resourcePlan",
    "assetGraph",
    "configuration",
    "constraints",
    "extends",
    "extensions",
    "scope",
    "_links",
    "_status"
  ],
  "properties": {
    "_id": {
      "type": "string",
      "format": "uuid",
      "example": "32f42ce8-61dd-4bbc-bba5-1fdc03a0af9f"
    },
    "_bssVer": {
      "type": "integer",
      "format": "int64",
      "example": 1
    },
    "_ver": {
      "type": "string",
      "format": "uuid",
      "example": "810a3768-17af-4f2f-9d4c-b07c6cdfc672"
    },
    "_created": {
      "type": "string",
      "format": "date-time",
      "example": "2018-05-18T19:16:15+00:00"
    },
    "_lastModified": {
      "type": "string",
      "format": "date-time",
      "example": "2018-05-18T19:16:15+00:00"
    },
    "_createdBy": {
        "type": "string"
    },
    "expiresOn": {
      "type": "string",
      "format": "date-time"
    },
    "label": {
      "type": "string"
    },
    "tags": {
      "type": "string"
    },
    "language": {
      "type": "string"
    },
    "_docType": {
      "$ref": "#/definitions/DocumentType_Enum"
    },
    "_assetType": {
      "$ref": "#/definitions/AssetType_Enum"
    },
    "assetClass": {
      "type": "string"
    },
    "objectives": {
      "type": "string"
    },
    "groups": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "resources": {
      "$ref": "#/definitions/AssetResourceArray"
    },
    "learningModel": {
      "$ref": "#/definitions/LearningModelRelationship"
    },
    "assetGraph": {
      "$ref": "#/definitions/AssetGraph"
    },
    "resourcePlan": {
      "$ref": "#/definitions/ResourcePlan"
    },
    "configuration": {
      "type": "object",
      "properties": {
        "policyGroups": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        }
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "extends": {
      "type": "object",
      "properties": {
        "sources": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/AssetRelationship"
          }
        }
      },
      "additionalProperties": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/AssetRelationship"
        }
      }
    },
    "extensions": {
      "anyOf": [
        {
          "$ref": "#/definitions/ReducedObject"
        },
        {
          "type": "object"
        }
      ]
    },
    "scope": {
      "type": "object"
    },
    "_links": {
      "$ref": "#/definitions/HalLinks"
    },
    "_status": {
    	"type": "string"
    }
  },
  "definitions": {
    "ContentCategory_Enum": {
      "type": "string",
      "enum": [
        "image",
        "narrative",
        "audio",
        "video",
        "model",
        "configuration",
        "evidence",
        "abstract"
      ]
    },
    "AssetResourceArray": {
      "oneOf": [
        {
          "$ref": "#/definitions/ReducedObject"
        },
        {
          "type": "object",
          "additionalProperties": {
            "anyOf": [
              {
                "$ref": "#/definitions/AssetRelationship"
              },
              {
                "$ref": "#/definitions/ResourceRelationship"
              },
              {
                "$ref": "#/definitions/AssetInlinedResource"
              }
            ]
          }
        }
      ]
    },
    "AssetGraph": {
      "oneOf": [
        {
          "$ref": "#/definitions/ReducedObject"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AssetGraphItem"
          }
        }
      ]
    },
    "ResourcePlan": {
      "oneOf": [
        {
          "$ref": "#/definitions/ReducedObject"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ResourcePlanItem"
          }
        }
      ]
    },
    "AssetGraphItem": {
      "type": "object",
      "required": [
        "startNode",
        "endNode",
        "relationships"
      ],
      "properties": {
        "startNode": {
          "type": "string"
        },
        "endNode": {
          "type": "string"
        },
        "relationships": {
          "type": "object"
        }
      }
    },
    "ResourcePlanItem": {
      "type": "object",
      "required": [
        "label",
        "resourceElementType",
        "resourceRef",
        "resourceElements"
      ],
      "properties": {
        "label": {
          "type": "string"
        },
        "resourceElementType": {
          "type": "string"
        },
        "resourceRef": {
          "type": "string"
        },
        "resourceElements": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ResourcePlanItem"
          }
        }
      }
    },
    "ResourceRelationship": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "_resourceType",
        "_id",
        "_bssVer",
        "_ver",
        "_links"
      ],
      "properties": {
        "_resourceType": {
          "$ref": "#/definitions/ResourceType_Enum"
        },
        "_id": {
          "type": "string",
          "format": "uuid",
          "example": "32f42ce8-61dd-4bbc-bba5-1fdc03a0af9f"
        },
        "_bssVer": {
          "type": "integer",
          "format": "int64",
          "example": 1
        },
        "_ver": {
          "type": "string",
          "format": "uuid",
          "example": "810a3768-17af-4f2f-9d4c-b07c6cdfc672"
        },
        "_links": {
          "$ref": "#/definitions/HalLinks"
        }
      }
    },
    "AssetRelationship": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "_resourceType",
        "_docType",
        "_assetType",
        "_id",
        "_bssVer",
        "_ver",
        "_links"
      ],
      "properties": {
        "_resourceType": {
          "$ref": "#/definitions/ResourceType_Enum"
        },
        "_docType": {
          "$ref": "#/definitions/DocumentType_Enum"
        },
        "_assetType": {
          "$ref": "#/definitions/AssetType_Enum"
        },
        "_id": {
          "type": "string",
          "format": "uuid",
          "example": "32f42ce8-61dd-4bbc-bba5-1fdc03a0af9f"
        },
        "_bssVer": {
          "type": "integer",
          "format": "int64",
          "example": 1
        },
        "_ver": {
          "type": "string",
          "format": "uuid",
          "example": "810a3768-17af-4f2f-9d4c-b07c6cdfc672"
        },
        "_links": {
          "$ref": "#/definitions/HalLinks"
        }
      }
    },
    "LearningModelRelationship": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "_id",
        "_bssVer",
        "_ver"
      ],
      "properties": {
        "_id": {
          "type": "string",
          "format": "uuid",
          "example": "32f42ce8-61dd-4bbc-bba5-1fdc03a0af9f"
        },
        "_bssVer": {
          "type": "integer",
          "format": "int64",
          "example": 1
        },
        "_ver": {
          "type": "string",
          "format": "uuid",
          "example": "810a3768-17af-4f2f-9d4c-b07c6cdfc672"
        },
        "_links": {
          "$ref": "#/definitions/HalLinks"
        }
      }
    },
    "DocumentType_Enum": {
      "type": "string",
      "enum": [
        "LEARNINGASSET",
        "LEARNINGCONTENT",
        "LEARNINGENGAGEMENT",
        "LEARNINGGRAPH",
        "LEARNINGMODEL"
      ]
    },
    "ResourceType_Enum": {
      "type": "string",
      "enum": [
        "LEARNINGASSET",
        "CONTENT",
        "INLINED"
      ]
    },
    "AssetType_Enum": {
      "type": "string",
      "enum": [
        "NARRATIVE",
        "ASSESSMENT-ITEM",
        "INSTRUCTION",
        "ASSESSMENT",
        "TOOL",
        "AGGREGATE",
        "PRODUCT",
        "LEARNINGEXPERIENCE",
        "ENGAGEMENTPLAN",
        "USERENGAGEMENT",
        "LEARNINGPOLICY",
        "DELIVERYPLAN",
        "MASTERGRAPH",
        "LEARNEROUTCOME",
        "EVALUATIONPLAN",
        "USEREVALUATION"
      ]
    },
    "HalLinks": {
      "type": "object",
      "additionalProperties": {
        "anyOf": [
          {
            "type": "object",
            "required": [
              "href"
            ],
            "properties": {
              "href": {
                "type": "string"
              }
            }
          },
          {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "href"
              ],
              "properties": {
                "href": {
                  "type": "string"
                }
              }
            }
          }
        ]
      }
    },
    "HalEmbedded": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
    },
    "ReducedObject": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "_links"
      ],
      "properties": {
        "_links": {
          "$ref": "#/definitions/HalLinks"
        }
      }
    },
    "InlinedResource": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "category",
        "data"
      ],
      "properties": {
        "category": {
          "$ref": "#/definitions/ContentCategory_Enum"
        },
        "model": {
          "type": "string"
        },
        "data": {
          "oneOf": [
            {
              "type": "object"
            },
            {
              "type": "string"
            }
          ]
        }
      }
    },
    "AssetInlinedResource": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "_resourceType",
        "category",
        "data"
      ],
      "properties": {
        "_resourceType": {
          "$ref": "#/definitions/ResourceType_Enum"
        },
        "category": {
          "$ref": "#/definitions/ContentCategory_Enum"
        },
        "model": {
          "type": "string"
        },
        "data": {
          "oneOf": [
            {
              "type": "object"
            },
            {
              "type": "string"
            }
          ]
        }
      }
    }
  }
}